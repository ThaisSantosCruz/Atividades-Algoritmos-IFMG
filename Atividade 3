//uma funcão para verificar se um numero e positivo ou negativo. Sendo que o valor de retorno sera 1 se positivo, -1 se negativo e 0 se for igual a 0.  ́
//c++

#include <iostream>

using namespace std;

int main()
{
 int n;
 cin>>n;
 
 if(n>0){
    
     cout<<"1";
     
 }
     
     if(n<0){
         cout<<"-1";
     }else{
         cout<<"0";
     }
 
 

    return 0;
}

//python

n = int(input("diga um numero:"))

if n > 0:
    print("1")
elif n < 0:
    print("-1")
else:
    print("0")
